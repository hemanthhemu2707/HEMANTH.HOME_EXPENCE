@model List<HEMANTH.HOME_EXPENCE.Models.AdminMaster.Family.FamilyRequest>
@{
    Layout = "~/Views/Shared/_admin_layouy.cshtml";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Family Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center; /* Centering the cards */
            gap: 30px; /* Space between cards */
        }

        /* Styling for each individual card */
        .card {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
            height: auto;
            width: 100%; /* Full width on small screens */
            max-width: 600px; /* Limit the width of the card */
            margin-bottom: 30px;
            padding: 30px;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 16px 32px rgba(0, 0, 0, 0.2);
            }

        /* Card Title */
        .card-title {
            font-size: 2rem;
            font-weight: bold;
        }

        /* Styling for details section */
        .detail-row {
            display: flex;
            flex-wrap: wrap;
            gap: 20px; /* Add space between items */
        }

        .detail-item {
            flex: 1 1 45%; /* Two items per row */
            margin-bottom: 15px;
        }

        .edit-icon {
            cursor: pointer;
            font-size: 2rem;
            color: #007bff;
        }

        /* Search box styling */
        .search-box {
            margin-bottom: 30px;
        }

        /* Adjust font sizes for responsiveness */
        @@media (max-width: 768px) {
            .card-title

        {
            font-size: 1.5rem;
        }

        .detail-item {
            flex: 1 1 100%; /* Stack the items in a single column on smaller screens */
        }

        .card {
            padding: 20px;
            width: 100%;
        }

        }
    </style>
</head>
<body>

    <div class="container py-5">
        <!-- Add Family Button -->
         @if (Model.Count() == 0)
    {
        <div class="row mb-4">
            <div class="col-12 text-end">
                <a href="../AdminMaster/AddFamily" class="btn btn-success">
                    <i class="fas fa-plus-circle"></i> Add Family
                </a>
            </div>
        </div>
    }

@*         <!-- Search Bar -->
        <div class="row mb-4">
            <div class="col-12">
                <input type="text" id="search" class="form-control search-box" placeholder="Search by name, home, door number..." />
            </div>
        </div> *@

        <h2 class="text-center mb-4">
            @if (Model.Any())
            {
                <text>Familie Detail</text>
            }
            else
            {
                <text>Create New Family !</text>
            }
        </h2>

        <div class="card-container">
            @foreach (var family in Model)
            {
                <div class="card">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <center> <h5 class="card-title">@family.FamilyName</h5></center>
                        <!-- Edit Icon -->
                        <a href="../AdminMaster/AddFamily" class="edit-icon" title="Edit">
                            <i class="fas fa-edit"></i>
                        </a>
                    </div>

                    <!-- Family Details Section -->
                    <div class="detail-row">
                        <div class="detail-item">
                            <strong>Home Desc:</strong> @family.FamilyDesc
                        </div>
                        <div class="detail-item">
                            <strong>Family Owner:</strong> @family.FamilyOwnerName
                        </div>
                        <div class="detail-item">
                            <strong>Door Number:</strong> @family.FamilyDoorNumber
                        </div>
                        <div class="detail-item">
                            <strong>Location:</strong> @family.FamilyLocation
                        </div>
                        <div class="detail-item">
                            <strong>Mobile Number:</strong> @family.FamilyMobileNumber
                        </div>
                        <div class="detail-item">
                            <strong>Electricity Bill Number:</strong> @family.FamilyEleBillNumber
                        </div>
                        <div class="detail-item">
                            <strong>Floor Number:</strong> @family.FamilyFloorNo
                        </div>
                        <div class="detail-item">
                            <strong>Entry Date:</strong> @family.FamilyEntryDate.ToString("MMMM dd, yyyy")
                        </div>
                        <div class="detail-item">
                            <strong>Family Ref key:</strong> @family.FamilyRefrenceKey
                        </div>
      
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

    <!-- jQuery for search functionality -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Search functionality
            $('#search').on('input', function () {
                var searchTerm = $(this).val().toLowerCase();
                $('.card-item').each(function () {
                    var cardContent = $(this).text().toLowerCase(); // Get all text inside the card
                    if (cardContent.includes(searchTerm)) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            });
        });
    </script>

</body>
</html>