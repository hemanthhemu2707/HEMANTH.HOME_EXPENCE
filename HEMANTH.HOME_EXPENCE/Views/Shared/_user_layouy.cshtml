        :root {
            --top-nav-color: #343a40;
            --left-nav-color: #212529;
            --main-content-color: #f8f9fa;
        }

      
        .top-nav {
            position: fixed;
            top: 0;
            width: 100%;
            background-color: var(--top-nav-color);
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 15px;
            z-index: 1000;
        }

      
            .top-nav .title {
                font-size: 18px;
                font-weight: bold;
            }

        .session-details {
            font-size: 14px;
        }

        .left-nav {
            position: fixed;
            top: 50px; /* Below the top navigation */
            bottom: 50px; /* Above the bottom bar */
            left: -250px; /* Hidden by default */
            width: 250px;
            height: calc(100vh - 100px); /* Adjust for top and bottom bars */
            background-color: var(--left-nav-color);
            overflow-y: auto;
            z-index: 1000; /* Below bottom bar */
            transition: left 0.3s ease-in-out;
        }

            .left-nav.active {
                left: 0; 
            }

            .left-nav a {
                color: white;
                text-decoration: none;
                display: flex;
                align-items: center;
                padding: 10px 15px;
                border-bottom: 1px solid #495057;
            }

