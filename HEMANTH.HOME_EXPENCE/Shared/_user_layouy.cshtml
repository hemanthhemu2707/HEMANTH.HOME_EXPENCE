    <style>
  

      
        :root {
            --top-nav-color: #343a40;
            --left-nav-color: #212529;
            --main-content-color: #f8f9fa;
        }

      
        .top-nav {
            background-color: var(--top-nav-color);
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 15px;
        }

            .top-nav .title {
                font-size: 18px;
                font-weight: bold;
            }

        .session-details {
            font-size: 14px;
        }

        .left-nav {
            position: fixed;
            top: 47px;
            left: -250px; /* Initially, the left nav will be offscreen */
            height: calc(100vh - 50px);
            width: 250px;
            background-color: var(--left-nav-color);
            overflow-y: auto;
            transition: left 0.3s ease; /* Add smooth transition */
            z-index: 999;
        }

            .left-nav.active {
                left: 0; /* When 'active' class is added, left nav will slide in */
            }

            .left-nav a {
                color: white;
                text-decoration: none;
                display: flex;
                align-items: center;
                padding: 10px 15px;
                border-bottom: 1px solid #495057;
            }

                .left-nav a i {
                    margin-right: 10px;
                }

                .left-nav a:hover {
                    background-color: #495057;
                }

            .left-nav .logout-btn {
                color: white;
                text-decoration: none;
                display: flex;
                align-items: center;
                position: absolute;
                bottom: 20px;
                width: 100%;
                padding: 10px 15px;
                border-top: 1px solid #495057;
            }

        .main-content {
            margin-left: 0;
            padding: 20px;
            transition: margin-left 0.3s ease;
        }


            .main-content.shift {
                margin-left: 250px; /* When the left nav is active, push the main content */
            }


        /* Popup Styles */
        .color-picker-popup {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: white;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            z-index: 1000;
        }

            .color-picker-popup.active {
                display: block;
            }

        .overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 999;
        }

            .overlay.active {
                display: block;
            }

        .popup-buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 15px;
        }

        .alert-container {
            position: fixed;
            top: 100px;
            right: -100%; /* Initially hide off-screen */
            z-index: 1050;
            transition: right 0.5s ease-in-out; /* Slide-in effect */
        }

        .alert {
            padding: 10px 20px;
            color: #fff;
            font-size: 1rem;
            border-radius: 5px;
            display: flex;
            justify-content: space-between;
        }

        /* Styles for different alert types */
        .alert-success {
            background-color: #28a745;
        }

        .alert-error {
            background-color: #dc3545;
        }

        .alert-warning {
            background-color: #ffc107;
        }

        /* Hide the notification after 5 seconds */
        .fade-out {
            opacity: 0;
            transition: opacity 1s ease-out;
        }

        .emoji {
            font-size: 20px; /* Size of the emoji */
            display: inline-block;
            animation: bounce 1s infinite, shake 0.5s infinite alternate; /* Apply both animations */
            cursor: pointer;
        }

        /* Bounce animation */
        @@keyframes bounce {
            0% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-10px);
            }

            100% {
                transform: translateY(0);
            }
        }

        /* Shake animation */
        @@keyframes shake {
            0% {
                transform: rotate(-10deg);
            }

            25% {
                transform: rotate(10deg);
            }

            50% {
                transform: rotate(-10deg);
            }

            75% {
                transform: rotate(10deg);
            }

            100% {
                transform: rotate(0deg);
            }
        }

        .emoji {
            font-size: 20px;
